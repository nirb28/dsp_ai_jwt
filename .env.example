# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds

# Authentication Method: 'ldap' or 'file'
AUTH_METHOD=file

# File-based Authentication Configuration
USERS_FILE=config/users.yaml

# API Keys Configuration
API_KEYS_DIR=config/api_keys

# Internal token for API calls between services
INTERNAL_API_TOKEN=your-internal-token-here

# LDAP Configuration (only needed if AUTH_METHOD=ldap)
LDAP_SERVER=ldap://your-ldap-server:389
LDAP_BASE_DN=dc=example,dc=com
LDAP_USER_DN=cn=users,dc=example,dc=com
LDAP_ADMIN_DN=cn=admin,dc=example,dc=com
LDAP_ADMIN_PASSWORD=admin_password

# Server Configuration
PORT=5000
